{% extends 'base.html.twig' %}

{% block title %}Empresa index{% endblock %}

{% block body %}
<div class="container m-3 col-9 mx-auto text-center">
    <table class="table mt-3 mx-auto">
        <thead>
            <tr>
            {# headers #}
                <th>Id</th>
                <th>Nombre empresa</th>
                <th>Tlf empresa</th>
                <th>Email empresa</th>
                <th>Sector empresa</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
        {% for empresa in empresas %}
            <tr>
            {# info x empresa #}
                <td>{{ empresa.id }}</td>
                <td>{{ empresa.nombreEmpresa }}</td>
                <td>{{ empresa.tlfEmpresa }}</td>
                <td>{{ empresa.emailEmpresa }}</td>
                <td>{{ sector[empresa.sectorEmpresa].nombreSector }}</td>
                <td>
                {# botones aqui #}
                    <a class="btn btn-primary" href="{{ path('empresa_show', {'id': empresa.id}) }}">Ver mas</a>
                    <a class="btn btn-success" href="{{ path('empresa_edit', {'id': empresa.id}) }}">Editar</a>
                    <a class="btn btn-danger" href="{{ path('empresa_confirmar_borrar', {'id': empresa.id }) }}">Delete</a>

                    {# <div class="container mx-auto mt-1 ">
                    {{ include('empresa/_delete_form.html.twig') }}
                    </div> #}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No se encontraron empresas.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{# boton crear nueva empresa #}
    <a class="btn btn-primary text-center mx-auto" href="{{ path('empresa_new') }}">Create new</a>
</div>

{% endblock %}
