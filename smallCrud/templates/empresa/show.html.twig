{% extends 'base.html.twig' %}

{% block title %}Empresa{% endblock %}

{% block body %}
    <div class="container col-6 mx-auto text-center">
    <h1>{{ empresa.nombreEmpresa }}</h1>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ empresa.id }}</td>
            </tr>
            <tr>
                <th>Nombre_empresa</th>
                <td>{{ empresa.nombreEmpresa }}</td>
            </tr>
            <tr>
                <th>Tlf_empresa</th>
                <td>{{ empresa.tlfEmpresa }}</td>
            </tr>
            <tr>
                <th>Email_empresa</th>
                <td>{{ empresa.emailEmpresa }}</td>
            </tr>
            <tr>
                <th>Sector_empresa</th>
                <td>{{ empresa.sectorEmpresa }}</td>
            </tr>
        </tbody>
    </table>
<row class="px-1 pb-2 col-9">
    <a class="btn btn-primary" href="{{ path('empresa_index') }}">Volver a Empresas</a>
    <a class="btn btn-success" href="{{ path('empresa_edit', {'id': empresa.id}) }}">Editar empresa</a>
    <a class="btn btn-danger" href="{{ path('empresa_confirmar_borrar', {'id': empresa.id }) }}">Eliminar empresa</a>

    <div class="container text-center mt-3 mx-auto">
    {# {{ include('empresa/_delete_form.html.twig') }} #}
    
    </div>
    </row>
{% endblock %}
